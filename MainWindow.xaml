<Window x:Class="connectFour.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:connectFour"
        mc:Ignorable="d"
        Title="Connect Four" Height="450" Width="800"
        WindowStartupLocation="CenterScreen">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1000*"/>
        </Grid.ColumnDefinitions>
        <TextBlock Name="StatusDisplay" FontSize="18" Margin="350 20, 0, 0"></TextBlock>
        <Button Content="Reset" HorizontalAlignment="Left" Margin="650,289,0,0" VerticalAlignment="Top" Height="50" Width="100" Click="Reset_click"/>
        <Button Content="New game" HorizontalAlignment="Left" Height="50" Margin="650,217,0,0" VerticalAlignment="Top" Width="100" Click="NewGame_Click"/>
        <Grid Name="BoardGrid" Margin="50,75,200,50">
        </Grid>

    </Grid>
</Window>
